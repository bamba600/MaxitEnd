# .env

# Configuration base de données principale
DB_HOST=localhost
DB_NAME=maxit
DB_USER=root
DB_PASS=bamba
DB_DRIVER=mysql
AUTH_URL=http://localhost:8000

# Configuration DSN (Data Source Name)
DSN_MYSQL=mysql:host=localhost;dbname=maxit;charset=utf8mb4
DSN_PGSQL=pgsql:host=localhost;dbname=maxit;port=5432

# Configuration MySQL spécifique
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=maxit
MYSQL_USERNAME=root
MYSQL_PASSWORD=bamba
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# Configuration PostgreSQL spécifique
PGSQL_HOST=localhost
PGSQL_PORT=5432
PGSQL_DATABASE=maxit
PGSQL_USERNAME=postgres
PGSQL_PASSWORD=password
PGSQL_CHARSET=utf8

# Configuration des uploads
UPLOAD_DIR=public/uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf
UPLOAD_PATH=/home/bamba/Téléchargements/Proget_MAxit4/public/uploads