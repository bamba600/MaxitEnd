# .env.example

# Configuration base de données principale
DB_HOST=localhost
DB_NAME=maxit
DB_USER=root
DB_PASS=
DB_DRIVER=mysql
AUTH_URL=https://appwoyofal-qljz.onrender.com

# Configuration DSN (Data Source Name)
DSN_MYSQL=mysql:host=localhost;dbname=maxit;charset=utf8mb4
DSN_PGSQL=pgsql:host=localhost;dbname=maxit;port=5432

# Configuration MySQL spécifique
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=maxit
MYSQL_USERNAME=root
MYSQL_PASSWORD=

# Configuration Uploads
UPLOAD_DIR=public/uploads
UPLOAD_PATH=public/uploads
UPLOAD_MAX_SIZE=5242880

# Configuration de l'application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://appwoyofal-qljz.onrender.com
